<table class="table table-striped table-middle-aligned">
    <thead>
        <tr>
            <th scope="col">{{ 'label.authority'|trans }}</th>
            <th scope="col">{{ 'label.requirement'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for control in controls %}
        <tr>
	        <td>{{ control.authorityref.title }} {{ control.number }}</td>
            <td>{{ control.requirement[:30] ~ '...' }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" align="center">No risks</td>
       </tr>
    {% endfor %}
    </tbody>
</table>