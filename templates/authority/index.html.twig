{% extends 'base.html.twig' %}

{% block body_id 'authority_index' %}

{% block main %}
    <h1>{{ 'title.authority_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'label.title'|trans }}</th>
                <th scope="col">{{ 'label.version'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for authority in authoritys %}
            <tr>
                <td>{{ authority.fullname }}</td>
                <td>{{ authority.version }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('authority_show', {id: authority.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('authority_edit', {id: authority.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'authority.no_authority_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('authority_new') }}" class="btn btn-lg btn-block btn-primary">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_authority'|trans }}
        </a>
    </div>

    {{ parent() }}

{% endblock %}
